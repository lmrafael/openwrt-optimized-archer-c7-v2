#!/bin/sh

wan=eth0.2
pid=$(cat "/var/run/udhcpc-${wan}.pid")

if [ "$1" = "release" ]; then
	kill -s SIGUSR2 "$pid"
elif [ "$1" = "renew" ]; then
	kill -s SIGUSR1 "$pid"
elif [ "$1" = "toggle" ]; then
	kill -s SIGUSR2 "$pid"
	sleep 1
	kill -s SIGUSR1 "$pid"
else
	echo "Usage: wanip [release|renew|toggle]"
fi
